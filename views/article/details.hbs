<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <header>
                    <h2>{{title}}</h2>
                </header>

                <p>
                    {{content}}
                </p>
                {{#if imagePath}}
                <img src="{{imagePath}}" width="200" alt="Article image">
                {{/if}}
                <small class="author">
                    {{author.fullName}}
                </small>

                <footer>
                    <div class="pull-right">
                        <a class="btn btn-success btn-xs" href="/article/edit/{{id}}">Edit &raquo;</a>
                        <a class="btn btn-danger btn-xs" href="/article/delete/{{id}}">Delete &raquo;</a>
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                    <br/>
                    <br/>
                    <div class="pull-left">
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="articleTitle">Your name</label>
                            <div class="col-sm-8 ">
                                <input type="text" class="form-control" id="articleTitle" placeholder="Enter your name" name="title" required >
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="articleContent">Your comment</label>
                            <div class="col-sm-8">
                                <textarea class="form-control" id="articleContent" placeholder="Enter your comment" rows="5" name="content" required></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-4">

                                <button type="reset" class="btn btn-default">Cancel</button>

                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </div>
                </footer>
            </article>


        </div>
    </div>
</div>
